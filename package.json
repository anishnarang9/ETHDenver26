{
  "name": "agent-passport-commerce-stack",
  "private": true,
  "version": "0.1.0",
  "description": "Agent Passport + x402 enforcement reference implementation on Kite",
  "license": "MIT",
  "packageManager": "pnpm@9.12.2",
  "scripts": {
    "dev": "pnpm --parallel --stream --filter @kite-stack/gateway --filter @kite-stack/rider --filter @kite-stack/foodie --filter @kite-stack/eventbot --filter @kite-stack/planner --filter @kite-stack/web dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "typecheck": "pnpm -r typecheck",
    "dev:web": "pnpm --filter @kite-stack/web dev",
    "dev:gateway": "pnpm --filter @kite-stack/gateway dev",
    "dev:rider": "pnpm --filter @kite-stack/rider dev",
    "dev:foodie": "pnpm --filter @kite-stack/foodie dev",
    "dev:eventbot": "pnpm --filter @kite-stack/eventbot dev",
    "dev:planner": "pnpm --filter @kite-stack/planner dev",
    "dev:runner": "pnpm --filter @kite-stack/runner dev",
    "dev:customer-agent": "pnpm --filter @kite-stack/customer-agent dev",
    "dev:weather-fallback": "pnpm --filter @kite-stack/weather-fallback-provider dev",
    "dev:facilitator-mock": "pnpm --filter @kite-stack/gateway dev:facilitator-mock",
    "db:generate": "pnpm --filter @kite-stack/db prisma:generate",
    "db:migrate": "pnpm --filter @kite-stack/db prisma:migrate",
    "test:spend-check": "pnpm --filter @kite-stack/gateway test:spend-check"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "tsx": "^4.19.2"
  },
  "devDependencies": {
    "next": "15.2.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "typescript": "^5.9.2"
  }
}
